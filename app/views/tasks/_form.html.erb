<h1>Edit Task</h1>

<%= form_with model: @task do |f| %>

  <%= f.label :title %><br>
  <%= f.text_field :title %><br>

  <%= f.label :details %><br>
  <%= f.text_area :details %><br>

  <% if action_name == 'edit' %>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  <% end %>

  <%= f.submit "Update Task" %>
<% end %>
